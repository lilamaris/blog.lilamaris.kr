generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"

  moduleFormat            = "esm"
  generatedFileExtension  = "ts"
  importFileExtension     = "ts"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Category {
  id            Int             @id @default(autoincrement())
  name          String          @unique
  posts         Post[]
}

model User {
  id    Int     @id @default(autoincrement())
  email String  @unique
  name  String?
  posts Post[]
}

model Post {
  id            Int             @id @default(autoincrement())
  title         String
  description   String
  slug          String
  content       String
  createdAt     DateTime
  updatedAt     DateTime
  published     Boolean

  categories    Category[]

  authorId      Int
  author        User            @relation(fields: [authorId], references: [id])
}
